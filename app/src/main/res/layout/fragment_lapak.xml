<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:background="@color/warna_bg"
    android:scrollbars="none"
    tools:context=".ui.lapak.LapakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoslab_extrabold"
            android:text="Lapak"
            android:textColor="@color/biru_cikara"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/line_tokojaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_putih_biru"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_lapak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_namaLapak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslab_bold"
                        android:text=""
                        android:textColor="@color/biru_cikara"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_alamatLapak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoslab_regular"
                        android:text=""
                        android:textColor="@color/biru_cikara" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_phone_24" />

                <TextView
                    android:id="@+id/tv_telpLapak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/robotoslab_regular"
                    android:text=""
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tentangLapak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_statusLapak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_biru_putih"
                android:fontFamily="@font/robotoslab_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/robotoslab_extrabold"
                android:text="Produk"
                android:textColor="@color/biru_cikara"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_tambahProduk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border_biru_putih"
                android:fontFamily="@font/robotoslab_semibold"
                android:padding="10dp"
                android:text="Tambah Produk"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <SearchView
            android:id="@+id/et_produkSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_putih_biru_inputan"
            android:iconifiedByDefault="false"
            android:queryHint="Cari Produk"
            android:searchIcon="@drawable/ic_baseline_search_24" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sortProdukAlfabet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_biru_putih"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="10dp"
                    android:text="Alfabet"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sortProdukHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="10dp"
                    android:text="Harga"
                    android:textColor="@color/biru_cikara" />

                <TextView
                    android:id="@+id/tv_sortProdukPopuler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru"
                    android:fontFamily="@font/robotoslab_bold"
                    android:padding="10dp"
                    android:text="Populer"
                    android:textColor="@color/biru_cikara" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/robotoslab_extrabold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/warna_bg"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>