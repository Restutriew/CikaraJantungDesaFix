<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_lapak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="55dp"
    android:background="@color/birubgall"
    android:scrollbars="none"
    tools:context=".ui.lapak.LapakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cr_judulLapak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/biru2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cr_fotoProfil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_lapakAtas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kimimaroboy" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_namaLapakAtas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Laporan"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/line_borderLapak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/line_editLapak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/img_lapak"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_namaLapak"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text=""
                                    android:textColor="@color/blacktext"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/img_editLapak"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_baseline_edit_24_black" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:id="@+id/tv_alamatLapak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_regular"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/blacktext" />

                            <TextView
                                android:id="@+id/tv_alamatLapakFull"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text=""
                                android:textColor="@color/blacktext"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_alamatLapakBtnLihat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Lihat Selengkapnya"
                                android:textColor="@color/blacktext"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_phone_24_black" />

                        <TextView
                            android:id="@+id/tv_telpLapak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text=""
                            android:textColor="@color/blacktext" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_tentangLapak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="3"
                        android:text=""
                        android:textColor="@color/blacktext" />

                    <TextView
                        android:id="@+id/tv_tentangLapakFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text=""
                        android:textColor="@color/blacktext"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_tentangLapakBtnLihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Lihat Selengkapnya"
                        android:textColor="@color/blacktext"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_statusLapak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/blacktext"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_lapakMenunggu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Lapak Sedang Ditinjau\nTidak Dapat Menambahkan Produk Saat Ini"
                        android:textColor="@color/blacktext"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/line_statusLapak"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/hijausukses"
                        android:gravity="center"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="20dp"-->
        <!--            android:orientation="horizontal">-->

        <!--            <TextView-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:layout_weight="1"-->
        <!--                android:fontFamily="@font/poppins_semibold"-->
        <!--                android:gravity="center_vertical"-->
        <!--                android:text="Produk"-->
        <!--                android:textColor="@color/blacktext"-->
        <!--                android:textSize="22sp" />-->

        <!--            <TextView-->
        <!--                android:id="@+id/tv_tambahProduk"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:fontFamily="@font/poppins_medium"-->
        <!--                android:text="Lihat Selengkapnya"-->
        <!--                android:textColor="@color/abutext" />-->

