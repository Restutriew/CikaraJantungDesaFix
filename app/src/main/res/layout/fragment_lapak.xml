<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_lapak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:scrollbars="none"
    tools:context=".ui.lapak.LapakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cr_judulLapak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/biru2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cr_fotoProfil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_lapakAtas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kimimaroboy" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_namaLapakAtas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/robotoslab_extrabold"
                    android:text="Laporan"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/line_borderLapak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_atas_biru_muda"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:id="@+id/line_editLapak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/biru3"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp">

                            <ImageView
                                android:id="@+id/img_lapak"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_namaLapak"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_extrabold"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="25sp" />

                                <ImageView
                                    android:id="@+id/img_editLapak"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_baseline_edit_24" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:id="@+id/tv_alamatLapak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text=""
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_phone_24" />

                        <TextView
                            android:id="@+id/tv_telpLapak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inter_regular"
                            android:text=""
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_tentangLapak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_regular"
                        android:text=""
                        android:textColor="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cr_simpanProduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/biru4"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_statusLapak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_extrabold"
                android:text="Produk"
                android:textColor="@color/biru2"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_tambahProduk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/border_biru_muda"
                android:fontFamily="@font/inter_semibold"
                android:padding="10dp"
                android:text="Tambah Produk"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <SearchView
            android:id="@+id/et_produkSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_putih_biru_inputan"
            android:iconifiedByDefault="false"
            android:queryHint="Cari Produk"
            android:searchIcon="@drawable/ic_baseline_search_24" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sortProdukAlfabet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_biru_muda"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="10dp"
                    android:text="Alfabet"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sortProdukHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="10dp"
                    android:text="Harga"
                    android:textColor="@color/biru2" />

                <TextView
                    android:id="@+id/tv_sortProdukPopuler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="10dp"
                    android:text="Populer"
                    android:textColor="@color/biru2" />

                <TextView
                    android:id="@+id/tv_sortProdukWaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/inter_semibold"
                    android:padding="10dp"
                    android:text="Waktu"
                    android:textColor="@color/biru2" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/robotoslab_extrabold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/warna_bg"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>