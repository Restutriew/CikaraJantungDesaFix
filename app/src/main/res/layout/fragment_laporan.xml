                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/kimimaroboy" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
