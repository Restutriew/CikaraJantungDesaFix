<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/img_photoperangkatDesa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/prs_dawala" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_namaPerangkatDesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Wahyu M Rizqi"
        android:textColor="@color/blacktext"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_jabatanPerangkatDesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Kepala Desa"
        android:textColor="@color/abutext" />

</LinearLayout>