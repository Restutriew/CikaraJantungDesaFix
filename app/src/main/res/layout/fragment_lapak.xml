        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Produk"
                android:textColor="@color/blacktext"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/line_tambahProduk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border_biru_muda"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_tambah_putih" />

                <TextView
                    android:id="@+id/tv_tambahProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Tambah Produk"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <SearchView
            android:id="@+id/et_produkSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_putih_inputan"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Cari Produk"
            android:searchIcon="@drawable/ic_baseline_search_24" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sortProdukWaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_biru_muda"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="Waktu"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sortProdukAlfabet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="Alfabet"
                    android:textColor="@color/biru2" />

                <TextView
                    android:id="@+id/tv_sortProdukHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="Harga"
                    android:textColor="@color/biru2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_sortProdukPopuler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/border_putih_biru_muda"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="5dp"
                    android:text="Populer"
                    android:textColor="@color/biru2" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="60dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>